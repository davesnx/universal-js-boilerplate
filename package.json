{
  "engines": {
    "node": ">=4.1 <5",
    "npm": ">=3.1 <4"
  },
  "name": "universal-js-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate to start universal (isomorphic) web applications",
  "scripts": {
    "lint": "standard | snazzy",
    "start": "babel-node ./src/app/server.js",
    "build": "rm -rf build/public && babel-node ./node_modules/.bin/webpack --config ./webpack/prod.config.js",
    "test": "babel-node ./node_modules/.bin/karma start --single-run",
    "test:watch": "babel-node ./node_modules/.bin/karma start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosazaustre/universal-js-boilerplate"
  },
  "keywords": [
    "boilerplate",
    "web development",
    "frontend",
    "javascript",
    "es6",
    "ecmascript 6",
    "react",
    "isomorphic"
  ],
  "author": "Carlos Azaustre <cazaustre@gmail.com> (https://carlosazaustre.es/blog)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carlosazaustre/universal-js-boilerplate/issues"
  },
  "homepage": "https://github.com/carlosazaustre/universal-js-boilerplate",
  "dependencies": {
    "snazzy": "^2.0.1",
    "standard": "^5.4.1"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.3",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.1.0",
    "babel-runtime": "^5.6.15",
    "css-loader": "^0.15.5",
    "esprima-fb": "^15001.1.0-dev-harmony-fb",
    "extract-text-webpack-plugin": "^0.8.2",
    "express": "^4.13.3",
    "jsdom": "^5.6.1",
    "json-loader": "^0.5.2",
    "karma": "^0.13.3",
    "karma-chai-plugins": "^0.6.0",
    "karma-cli": "^0.1.0",
    "karma-coverage": "^0.5.2",
    "karma-coveralls": "^1.1.2",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "karma-webpack": "^1.7.0",
    "nib": "^1.1.0",
    "node-libs-browser": "^0.5.2",
    "nodemon": "^1.3.7",
    "qs": "^4.0.0",
    "raw-loader": "^0.5.1",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-engine": "^1.7.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0-rc3",
    "react-hot-loader": "^1.2.8",
    "react-transform-hmr": "^1.0.0",
    "redux": "^3.0.2",
    "redux-thunk": "^0.1.0",
    "redux-devtools": "^2.1.5",
    "redux-logger": "^2.0.4",
    "redux-promise": "^0.5.0",
    "redux-router": "^1.0.0-beta4",
    "snazzy": "^2.0.1",
    "standard": "^5.4.1",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.12.3",
    "stylus-loader": "^1.4.0",
    "todomvc-app-css": "^2.0.1",
    "webpack": "^1.10.5",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.2.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "describe",
      "expect",
      "beforeEach",
      "afterEach",
      "jasmine",
      "spyOn"
    ]
  }
}
